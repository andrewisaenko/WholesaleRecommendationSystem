@page
@model LoginModel
@{
    ViewData["Title"] = "Вхід";
}

<div class="container my-5">
    <div class="row">
        <!-- Левая колонка -->
        <div class="col-md-6 d-flex flex-column align-items-center text-center pe-md-5 mb-4 mb-md-0">

            <!-- Вкладки -->
            <div class="mb-4">
                <div class="d-inline-flex bg-light rounded-pill overflow-hidden shadow-sm">                    
                    <span class="px-4 py-2 bg-white fw-bold" style="color: #003399;">Вхід</span>
                    <a href="/Identity/Account/Register" class="px-4 py-2 text-secondary text-decoration-none">Реєстрація</a>
                </div>
            </div>

            <!-- Текст -->
            <p class="lead px-3">Увійдіть, щоб переглядати історію замовлень, редагувати дані, накопичувати знижку та багато іншого.</p>

            <!-- Соц. вход -->
            <div class="mt-2 mb-5">
                <p class="fw-semibold mb-3">Або увійдіть через соцмережі:</p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <button class="btn btn-outline-primary px-4 py-2">
                        <i class="fa fa-facebook me-2"></i> Facebook
                    </button>
                    <button class="btn btn-outline-danger px-4 py-2">
                        <i class="fa fa-google me-2"></i> Google
                    </button>
                </div>
            </div>
        </div>

        <!-- Правая колонка: форма -->
        <div class="col-md-6">
            <form method="post" class="border p-4 rounded shadow-sm bg-white">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Пароль</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">Запам’ятати мене</label>
                </div>

                <button type="submit" class="btn text-white w-100" style="background-color: #003399;">Увійти</button>

                <div class="mt-3 text-center">
                    <a asp-page="./ForgotPassword" class="text-decoration-none" style="color: #003399;">Забули пароль?</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




