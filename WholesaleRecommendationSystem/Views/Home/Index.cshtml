@{
    ViewData["Title"] = "Головна";
}

@model List<WholesaleRecommendationSystem.Models.Product>

<div class="container text-center mt-4">
    <!-- Центральное изображение -->
    <img src="~/images/main-banner.jpg" class="img-fluid rounded" alt="Головне зображення" style="max-width: 80%;">

    <!-- Раздел "Часто відвідувані товари" -->
    <h2 class="mt-5 mb-3">Часто відвідувані товари</h2>
    <div class="row justify-content-center">
        @foreach (var product in Model)
        {
            <div class="col-md-2 mb-4 d-flex">
                <div class="card h-100 d-flex flex-column">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text"><strong>Ціна: $@product.Price</strong></p>
                        <a href="#" class="btn btn-primary mt-auto">Переглянути</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
