@model WholesaleRecommendationSystem.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p><strong>Ціна:</strong> $@Model.Price</p>
            <p><strong>Категорія:</strong> @Model.Category.Name</p>
            <p><strong>Виробник:</strong> @Model.Manufacturer.Name</p>
            <p>@Model.Description</p>
            <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-success">Додати в кошик</a>

        </div>
    </div>
</div>
