@model WholesaleRecommendationSystem.Models.Product

<div class="col-md-3 mb-4">
    <div class="card h-100 text-center">
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
        <div class="card-body" >
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">Ціна: $@Model.Price</p>
            <a href="@Url.Action("Product", "Catalog", new { id = Model.Id })" class="btn btn-primary">Детальніше</a>
        </div>
    </div>
</div>


