    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - WholesaleRecommendationSystem</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/WholesaleRecommendationSystem.styles.css" asp-append-version="true" />
    </head>
    <body>
        <header class="border-bottom">
            <!-- Верхний ряд (теперь тёмный) -->
            <div class="py-2" style="background-color: #003399;">
                <div class="container d-flex justify-content-between align-items-center text-white">
                    <nav>
                        <a href="#" class="text-white text-decoration-none mx-2">Про нас</a>
                        <a href="#" class="text-white text-decoration-none mx-2">Доставка і оплата</a>
                        <a href="#" class="text-white text-decoration-none mx-2">Сертифікати</a>
                        <a href="#" class="text-white text-decoration-none mx-2">Контакти</a>
                    </nav>
                    <div class="d-flex align-items-center">
                        <span class="text-white text-decoration-none mx-2"><i class="bi bi-telephone"></i> +38 (067) 123-45-67</span>
                        <a href="#" class="text-white text-decoration-none mx-2">УКР</a> |
                        <a href="#" class="text-white text-decoration-none mx-2">ENG</a>
                    </div>
                </div>
            </div>

            <!-- Нижний ряд (теперь белый) -->
            <div class="py-3 bg-white">
                <div class="container d-flex justify-content-between align-items-center">
                    <a href="/index" class="mx-3">
                        <img src="~/images/logo.png" alt="Логотип" class="img-fluid" style="max-height: 50px;">
                    </a>

                    <a href="/catalog" class="btn text-white" style="background-color: #003399;">☰ Каталог товарів</a>
                    <a href="#" class="text-dark text-decoration-none mx-3">Бренди</a>
                    <div class="d-flex flex-grow-1 mx-3">
                        <input type="text" class="form-control w-100" placeholder="Пошук...">
                        <button class="btn mx-1" style="background-color: #001E5A; color: white;"><i class="bi bi-search"></i></button>
                    </div>
                    <div class="d-flex align-items-center">
                        @if (User.Identity?.IsAuthenticated ?? false) 
                        { 
                            <a href="/Identity/Account/Manage" class="text-dark text-decoration-none mx-2">
                            <i class="bi-person-badge" style="font-size: 1.3rem;"></i> @User.Identity.Name
                            </a>
                        }
                        else
                        {
                            <a href="/Identity/Account/Login" class="text-dark text-decoration-none mx-2">
                            <i class="bi bi-person" style="font-size: 1.3rem;"></i>
                            </a>                        
                        }

                    <a href="#" class="text-dark text-decoration-none mx-2"><i class="bi bi-heart" style="font-size: 1.3rem;"></i></a>
                    <a href="/cart" class="text-dark text-decoration-none mx-2"><i class="bi bi-cart" style="font-size: 1.3rem;"></i></a>
                    </div>
               
                </div>
            </div>
        </header>

        <div class="container mb-5">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted mt-5">
            <div class="container">
                &copy; 2024 - WholesaleRecommendationSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
    </html>
